<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="900.0" prefWidth="1440.0" stylesheets="@../../css/menuView.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polimi.ingsw.view.gui.controllers.MenuController">
   <children>
      <StackPane fx:id="mainStackPane" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <StackPane fx:id="buttonsStackPane" prefHeight="150.0" prefWidth="200.0">
               <StackPane.margin>
                  <Insets bottom="300.0" left="500.0" right="500.0" top="300.0" />
               </StackPane.margin>
               <children>
                  <VBox fx:id="buttonsPane" prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="createLobbyButton" mnemonicParsing="false" text="Create Lobby">
                                 <StackPane.margin>
                                    <Insets top="50.0" />
                                 </StackPane.margin>
                              </Button>
                           </children>
                        </StackPane>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="joinLobbyButton" mnemonicParsing="false" text="Join Lobby">
                                 <StackPane.margin>
                                    <Insets bottom="50.0" />
                                 </StackPane.margin>
                              </Button>
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </children>
            </StackPane>
            <Button fx:id="backButton" mnemonicParsing="false" StackPane.alignment="BOTTOM_LEFT">
               <StackPane.margin>
                  <Insets bottom="50.0" left="50.0" />
               </StackPane.margin>
               <graphic>
                  <ImageView fitHeight="50.0" fitWidth="50.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../../images/icons/arrow-small-left.png" />
                     </image>
                  </ImageView>
               </graphic>
            </Button>
         </children>
      </StackPane>
   </children>
</AnchorPane>
