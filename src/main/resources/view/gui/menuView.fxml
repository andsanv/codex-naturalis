   <children>
      <StackPane fx:id="mainStackPane" prefHeight="150.0" prefWidth="200.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <StackPane fx:id="buttonsStackPane" prefHeight="150.0" prefWidth="200.0">
               <StackPane.margin>
                  <Insets bottom="300.0" left="500.0" right="500.0" top="300.0" />
               </StackPane.margin>
               <children>
                  <VBox prefHeight="200.0" prefWidth="100.0">
                     <children>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="createLobbyButton" mnemonicParsing="false" text="Create Lobby">
                                 <StackPane.margin>
                                    <Insets top="50.0" />
                                 </StackPane.margin>
                              </Button>
                           </children>
                        </StackPane>
                        <StackPane prefHeight="150.0" prefWidth="200.0">
                           <children>
                              <Button fx:id="joinLobbyButton" mnemonicParsing="false" text="Join Lobby">
                                 <StackPane.margin>
                                    <Insets bottom="50.0" />
                                 </StackPane.margin>
                              </Button>
                           </children>
                        </StackPane>
                     </children>
                  </VBox>
               </children>
            </StackPane>
            <Button fx:id="backButton" mnemonicParsing="false" text="Back" StackPane.alignment="TOP_LEFT">
               <StackPane.margin>
                  <Insets left="30.0" top="30.0" />
               </StackPane.margin>
            </Button>
         </children>
      </StackPane>
   </children>
</AnchorPane>
